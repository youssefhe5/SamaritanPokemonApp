<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PokemonDetailsFragment">

    <ImageView
        android:id="@+id/imageViewPokemonDetailsPic"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/ic_launcher_foreground"/>


    <TextView
        android:id="@+id/textViewPokemonDetailsNumberAndName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Name and Number"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewAbout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:textSize="16dp"
                android:padding="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textViewPokemonDetailsTypes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="2dp"
                android:layout_marginLeft="10dp"
                android:text="Type(s):"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewPokemonDetailsWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="2dp"
                android:text="Weight:"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewPokemonDetailsHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="2dp"
                android:text="Height:"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                android:textSize="14sp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewBaseStats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Base Stats"
                android:textSize="16dp"
                android:padding="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textViewPokemonDetailsHP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="2dp"
                android:layout_marginLeft="10dp"
                android:text="HP:"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewPokemonDetailsAttack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="2dp"
                android:text="Attack:"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewPokemonDetailsDefence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="2dp"
                android:text="Defence:"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewPokemonDetailsSpecialAttack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="2dp"
                android:text="Special Attack:"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewPokemonDetailsSpecialDefense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="2dp"
                android:text="Special Defence:"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewPokemonDetailsSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="2dp"
                android:text="Speed:"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                android:textSize="14sp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>